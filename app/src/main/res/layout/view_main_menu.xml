<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/main_menu_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexWrap="nowrap"
        app:justifyContent="space_between"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_form">

        <com.kodexgroup.betonapp.utils.views.ButtonMenuView
            android:id="@+id/products_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundBtn="@drawable/ic_bg_menu_button_green"
            app:iconBtnMain="@drawable/ic_shopping_basket"
            app:titleBtnMain="Товары" />

        <com.kodexgroup.betonapp.utils.views.ButtonMenuView
            android:id="@+id/sale_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundBtn="@drawable/ic_bg_menu_button_blue"
            app:iconBtnMain="@drawable/ic_discount"
            app:titleBtnMain="Акции" />

        <com.kodexgroup.betonapp.utils.views.ButtonMenuView
            android:id="@+id/newest_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundBtn="@drawable/ic_bg_menu_button_red"
            app:iconBtnMain="@drawable/ic_resource_new"
            app:titleBtnMain="Новинки" />

        <com.kodexgroup.betonapp.utils.views.ButtonMenuView
            android:id="@+id/favorites_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundBtn="@drawable/ic_bg_menu_button_yellow"
            app:iconBtnMain="@drawable/ic_bookmark"
            app:titleBtnMain="Избранное" />

    </com.google.android.flexbox.FlexboxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>