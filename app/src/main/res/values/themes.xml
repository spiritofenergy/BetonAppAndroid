<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BetonApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_500</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/noto_sans</item>
    </style>

    <style name="Theme.BetonApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/yellow_700</item>
    </style>

    <style name="EditTextHint" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/ic_edit_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">18dp</item>
    </style>

    <style name="Theme.BetonApp.BlueButton">
        <item name="android:background">@color/blue_500</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.BetonApp.YellowButton">
        <item name="android:background">@color/yellow_700</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.BetonApp.GridButton">
        <item name="android:background">@color/borders</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MyToolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

</resources>